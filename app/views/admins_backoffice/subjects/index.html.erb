<div class="row p-3">
  <div class="col-lg-12">
    <h1 class="page-header">Listando Assuntos/Areas</h1>
  </div>
</div>
<div class="row">
  <table id="datatablesSimple" class="dataTable-table">
    <thead>
      <tr>
        <th>
          <a href="#">Id</a>
        </th>
        <th >
          <a href="#">Descrição</a>
        </th>
        <th>
          <%= link_to new_admins_backoffice_subject_path,  class: "btn btn-success btn-sm" do%>
            <i class="fa fa-plus"></i>
          <%end%>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @subjects.each do |subject|  %>
        <tr>
          <td><%= subject.id %></td>
          <td><%= subject.description %></td>
          <td>
            <%= link_to edit_admins_backoffice_subject_path(subject), class: "btn btn-primary btn-sm rouded-5"  do%>
              <i class="fa fa-edit"></i>
            <%end%>

            <%= link_to admins_backoffice_subject_path(subject), method: :delete,  class: "btn btn-danger btn-sm rouded-5"  do%>
               <i class="fa fa-trash"></i>
            <%end%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @subjects %>
</div>