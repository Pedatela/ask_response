<div class="row p-3">
  <div class="col-lg-12">
    <h1 class="page-header"><%= action_message %> Perguntas</h1>
  </div>
</div>
<% if @question.errors.any? %>
    <div class="position-fixed top-0 end-0 p-3 m-5" style="z-index: 11">
        <div id="liveToast" class="toast show bg-danger" role="alert" aria-live="assertive" aria-atomic="true">
            <div class="toast-header">
                <strong class="me-auto">Erros</strong>
                <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
            </div>
            <ul class="toast-body p-3">
                <% @question.errors.full_messages.each do |message|%>
                    <li class="ml-5"><%= message %></li> 
                <%end%>
            </ul>
        </div>
    </div>
<%end%>

<div class="row">
  <%= form_for([:admins_backoffice, @question]) do |form| %>
    <div class="mb-3">
      <%= form.label :description, class: "form-label" %>
      <%= form.text_area :description ,class: "form-control"%>
    </div>
     <div class="mb-3">
      <%= form.label :subject_id, class: "form-label" %>
      <%= form.collection_select(:subject_id, Subject.all, :id, :description, {}, {class: "form-control"})%>
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
  <% end %>
</div>