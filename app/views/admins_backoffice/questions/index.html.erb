<div class="row p-3">
  <div class="col-lg-12">
    <h1 class="page-header">Listando Assuntos/Areas</h1>
  </div>
</div>
<div class="row">
  <table id="datatablesSimple" class="dataTable-table">
    <thead>
      <tr>
        <th>Id</th>
        <th >Descrição</th>
        <th>Assuntos</th>
        <th>
          <%= link_to new_admins_backoffice_question_path,  class: "btn btn-success btn-sm" do%>
            <i class="fa fa-plus"></i>
          <%end%>
        </th>
      </tr>
    </thead>
    <tbody>
      <% @questions.each do |question|  %>
        <tr>
          <td><%= question.id %></td>
          <td><%= question.description.truncate(50) %></td>
          <td><%= question.subject.description %></td>
          <td>
            <%= link_to edit_admins_backoffice_question_path(question), class: "btn btn-primary btn-sm rouded-5"  do%>
              <i class="fa fa-edit"></i>
            <%end%>

            <%= link_to admins_backoffice_question_path(question), method: :delete,  class: "btn btn-danger btn-sm rouded-5"  do%>
               <i class="fa fa-trash"></i>
            <%end%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @questions %>
</div>